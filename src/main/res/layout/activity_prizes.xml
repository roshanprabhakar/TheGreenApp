<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrizesActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/prizesTextView"
        android:layout_width="242dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="73dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/roboto_thin"
        android:gravity="center"
        android:text="Prizes"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewArticle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewArticle1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="92dp"
        android:layout_marginStart="55dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="500,000 Steps - Plant Seeds"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewArticle2"
        app:layout_constraintEnd_toStartOf="@+id/image1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prizesTextView" />

    <TextView
        android:id="@+id/textViewArticle2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="49dp"
        android:layout_marginEnd="97dp"
        android:layout_marginStart="55dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="1,000,000 Steps - Mini Plant"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewArticle3"
        app:layout_constraintEnd_toStartOf="@+id/image2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewArticle1" />

    <TextView
        android:id="@+id/textViewArticle3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="97dp"
        android:layout_marginStart="55dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="10,000,000 Steps - $20 Giftcard"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewArticle2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image1"
        android:layout_width="0dp"
        android:layout_height="107dp"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="53dp"
        android:src="@drawable/plantseeds"
        app:layout_constraintBottom_toTopOf="@+id/image2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewArticle1" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image2"
        android:layout_width="0dp"
        android:layout_height="107dp"
        android:layout_marginBottom="42dp"
        android:layout_marginEnd="49dp"
        android:src="@drawable/smallplant"
        app:layout_constraintBottom_toTopOf="@+id/image3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewArticle2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image3"
        android:layout_width="0dp"
        android:layout_height="107dp"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="49dp"
        android:src="@drawable/giftcard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewArticle3" />

</android.support.constraint.ConstraintLayout>